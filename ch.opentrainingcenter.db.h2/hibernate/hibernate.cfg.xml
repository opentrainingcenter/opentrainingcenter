<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.h2.Driver</property>
  <property name="hibernate.connection.url">jdbc:h2:file:~/.otc/otc</property>
  <property name="hibernate.connection.username">sa</property>
  <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
  <property name="connection.pool_size">10</property>
  <!-- SQL dialect 

Enable Hibernate's automatic session context management
-->
  <property name="current_session_context_class">thread</property>
  <!-- Disable the second-level cache -->
  <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
  <!-- Echo all executed SQL to stdout -->
  <property name="show_sql">true</property>
  <mapping class="ch.opentrainingcenter.transfer.impl.Athlete" resource="Athlete.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Health" resource="Health.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Weather" resource="Weather.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Training" resource="Training.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Trainingtype" resource="Trainingtype.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Tracktrainingproperty" resource="Tracktrainingproperty.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Streckenpunkte" resource="Streckenpunkte.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Planungwoche" resource="Planungwoche.hbm.xml"/>
  <mapping class="ch.opentrainingcenter.transfer.impl.Route" resource="Route.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
